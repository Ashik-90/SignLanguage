
<Root>:
    orientation: 'vertical'
    Label:
        id: welcome
        text: 'Welcome to Sign Language'
        font_size: 35
        size_hint: 1, 0.2

    Label:
        id: connection
        text:'Internet Connected. You can use all features'
        font_size: 15
        size_hint: 1,0.1  

    TextInput:
        id: info
        spacing: 10
        readonly: True
        background_color: 'grey'
        text: ''
        font_size: 15
        size_hint: 1, 0.3

    BoxLayout:
        orientation: 'horizontal'
        BoxLayout:
            orientation:'vertical'
            padding: 10
            spacing: 3
            size_hint: 0.25, 0.8
            Spinner:

                id: duration
                font_size:18
                background_color: 'skyblue'
                text: '3s'
                values: ['3s', '5s', '7s', '10s']
               # on_text: root.duration_clicked(duration.text)
            Button:
                id: record
                background_color: 'skyblue'
                font_size: 18
                text:'Speak now'
                on_press:
                    root.ids.welcome.text = 'Speaking'
                    root.record()
            Spinner:
                id: spinner_id
                background_color: 'skyblue'
                font_size:18
                text: 'Options'
                values: ['Recorded audio', 'Upload text','Enter text','Add image']
                on_text: root.spinner_clicked(spinner_id.text)

            

            Button:
                id: about_us
                background_color: 'skyblue'
                text: 'About'
                font_size: 18
                on_release: root.about()
                

            Button:
                id: contact
                background_color: 'skyblue'
                text: 'Contact'
                font_size: 18
                on_release: root.contact()
                
            Button:
                id: help
                background_color: 'skyblue'
                text: 'Help'
                font_size: 18
                on_release: root.help()
            Button:
                id: refresh
                background_color: 'skyblue'
                text: 'Refresh'
                font_size: 18
                on_release: root.refresh()
            Button:
                id: close
                background_color: 'red'
                text: 'Quit'
                font_size: 18
                on_release: exit()

        BoxLayout:
            orientation: 'vertical'

            Video:
                id: vid
                source: 'C:/Users/user/PycharmProjects/videomake/Output/vid_ex.mp4'
                color: 'black'
                padding: 10
                size_hint: 0.98, 4
                
            
            FloatLayout:
                orientation: 'horizontal'
                padding: 10
                

                Button:
                    id: play
                   #pos: 420, 5
                    pos_hint: {'center_x': 0.40, 'center_y': 0.35}
                    size_hint: None, None
                    size: 120,45
                    text:'Play'
                    background_color: 'blue'
                    on_press: root.play()

                Button:
                    id: save
                   # pos: 540, 5
                    pos_hint: {'center_x': 0.60, 'center_y': 0.35}
                    size_hint: None, None
                    size: 120,45
                    text:'Save'
                    background_color: 'skyblue'
                    on_press: root.save()


